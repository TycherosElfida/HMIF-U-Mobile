<?xml version="1.0" encoding="utf-8"?><!--
   Data extraction rules for Android 12+ backup and device transfer.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences -->
        <include
            domain="sharedpref"
            path="." />
        <!-- Exclude database files (synced via Firebase) -->
        <exclude
            domain="database"
            path="." />
        <!-- Exclude cache files -->
        <exclude
            domain="external"
            path="." />
        <exclude
            domain="root"
            path="cache/" />
    </cloud-backup>
    <device-transfer>
        <!-- Include preferences for device-to-device transfer -->
        <include
            domain="sharedpref"
            path="." />
        <!-- Include database for device transfer (faster than re-sync) -->
        <include
            domain="database"
            path="." />
        <!-- Exclude cache -->
        <exclude
            domain="external"
            path="." />
        <exclude
            domain="root"
            path="cache/" />
    </device-transfer>
</data-extraction-rules>